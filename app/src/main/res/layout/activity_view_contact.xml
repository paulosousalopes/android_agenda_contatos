<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.com.paulo.agenda.ViewContactActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:contentDescription="@string/contact_image"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:id="@+id/lblName"
        android:layout_below="@id/imageView"
        android:minWidth="@dimen/label_horizontal_margin"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textViewNameContact"
        android:layout_below="@id/imageView"
        android:layout_toEndOf="@id/lblName"
        android:layout_marginLeft="@dimen/defaultMarginBetweenComponents"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:id="@+id/lblEmail"
        android:layout_below="@+id/lblName"
        android:minWidth="@dimen/label_horizontal_margin"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="@dimen/defaultMarginBetweenComponents"
        android:clickable="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textViewEmailContact"
        android:layout_below="@id/lblName"
        android:layout_toEndOf="@id/lblEmail"
        android:layout_marginTop="@dimen/defaultMarginBetweenComponents"
        android:layout_marginLeft="@dimen/defaultMarginBetweenComponents"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"
        android:id="@+id/lblPhone"
        android:layout_below="@+id/lblEmail"
        android:minWidth="@dimen/label_horizontal_margin"
        android:layout_marginTop="@dimen/defaultMarginBetweenComponents" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textViewPhoneContact"
        android:layout_below="@+id/lblEmail"
        android:layout_toEndOf="@id/lblPhone"
        android:layout_marginLeft="@dimen/defaultMarginBetweenComponents"
        android:layout_marginTop="@dimen/defaultMarginBetweenComponents"
        android:clickable="true" />

    />
</RelativeLayout>
